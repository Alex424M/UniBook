<Page x:Class="UniBook.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UniBook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Главная">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="321*"/>
            <ColumnDefinition Width="161"/>
            <ColumnDefinition Width="318*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="87*"/>
            <RowDefinition Height="44"/>
            <RowDefinition Height="64"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="17"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="151*"/>
        </Grid.RowDefinitions>
        <Label Content="Добро пожаловать!" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Grid.Row="1" Grid.Column="1"></Label>
        <Button ToolTip="Вход" Content="Авторизация" Grid.Row="3" Grid.Column="1" Click="Button_Click_2"/>
        <Button ToolTip="Регистрация нового пользователя" Content="Регистрация" Grid.Row="5" Grid.Column="1" Click="Button_Click_1"/>
